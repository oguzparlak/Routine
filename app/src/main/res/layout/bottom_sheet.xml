<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clipToPadding="true"
    android:layout_height="wrap_content"
    app:behavior_peekHeight="0dp"
    android:background="@color/white"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:padding="@dimen/fab_margin"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/bottom_sheet_progress_bar"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/current_location_image_view"
                android:src="@drawable/ic_my_location_primary_24dp"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <View
                android:id="@+id/divider"
                android:layout_marginLeft="15dp"
                android:layout_below="@id/current_location_image_view"
                android:layout_marginTop="10dp"
                android:background="@color/colorPrimary"
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:layout_marginStart="15dp" />

            <TextView
                android:id="@+id/destination_label"
                android:layout_below="@id/divider"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_circular_text_view"
                android:fontFamily="@font/hind_bold"
                android:gravity="center"
                android:text="B"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/current_location_label"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/current_location_image_view"
                android:layout_toRightOf="@id/current_location_image_view"
                android:fontFamily="@font/hind"
                android:text="@string/current_location"
                android:layout_marginStart="14dp" />

            <TextView
                android:id="@+id/estimated_time_text_view"
                android:layout_marginTop="44dp"
                android:layout_marginStart="28dp"
                android:fontFamily="@font/hind"
                android:layout_toEndOf="@id/divider"
                android:text="Estimated Time: 42 mins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/divider"
                android:layout_marginLeft="28dp" />

            <TextView
                android:id="@+id/distance_text_view"
                android:layout_below="@id/estimated_time_text_view"
                android:text="Distance: 100m"
                android:fontFamily="@font/hind"
                android:layout_marginStart="45dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="45dp" />


            <TextView
                android:id="@+id/destination_address_text_view"
                android:layout_toRightOf="@id/destination_label"
                android:layout_marginTop="100dp"
                android:fontFamily="@font/hind"
                android:layout_marginLeft="16dp"
                android:text="Lorem ipsum dolor sit amet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp" />

        </RelativeLayout>

        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottom_bar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            app:bb_behavior="shifting"
            app:bb_titleTextAppearance="@style/BottomTextAppearance"
            app:bb_tabXmlResource="@xml/bottom_bar_tabs">

        </com.roughike.bottombar.BottomBar>


    </LinearLayout>


</android.support.v4.widget.NestedScrollView>