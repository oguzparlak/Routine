<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_tag_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="T"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:background="@drawable/circular_textview"/>


    <TextView
        android:id="@+id/list_item_place_name_text"
        android:text="Beylerbeyi"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_toEndOf="@+id/list_item_tag_image"
        android:layout_toRightOf="@+id/list_item_tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/list_item_radius_text"
        android:text="Radius: 1"
        android:textSize="12sp"
        android:layout_marginLeft="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="2dp"
        android:layout_below="@id/list_item_place_name_text"
        android:layout_toEndOf="@+id/list_item_tag_image"
        android:layout_toRightOf="@+id/list_item_tag_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Switch
        android:id="@+id/geofence_enabled_switch"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="true"/>

</RelativeLayout>